<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e8f1ff"
    tools:context=".Sign_in">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_marginStart="30dp"
        android:textColor="#00ac9e">
    </TextView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/thyia_bot"
        android:id="@+id/profilePicture"
        app:civ_border_color="#0e718b"
        app:civ_border_width="1dp">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Photo"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="#00ac9e">
    </TextView>

    <EditText
        android:id="@+id/profileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Name"
        android:textColor="@color/black"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:drawablePadding="16dp"
        android:drawableLeft="@drawable/user"
        android:layout_gravity="center_horizontal"
        android:maxLines="1"
        android:padding="12dp"
        android:inputType="textPersonName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Private Information"
        android:gravity="center_horizontal"
        android:padding="22dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#b2beb5">
    </TextView>
            <EditText
        android:id="@+id/profileEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email address"
                android:textColor="@color/black"
                android:padding="8dp"
                android:background="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"

        android:drawableLeft="@drawable/email"
        android:drawablePadding="12dp"
        android:layout_gravity="center_horizontal"
        android:inputType="textEmailAddress" />


    <EditText
        android:id="@+id/profileContact"
        android:layout_width="match_parent"
        android:ems="10"
        android:layout_height="wrap_content"
        android:hint="Contact"
        android:textColor="@color/black"
        android:padding="8dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:layout_marginLeft="20dp"
        android:drawablePadding="12dp"
      android:drawableLeft="@drawable/phone_call"
        android:layout_marginTop="10dp"
        android:inputType="phone"
       />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/logout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Log out"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:padding="22dp"
                android:layout_weight="0.4"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:textColor="#0e718b">
            </TextView>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/save_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Update Profile"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:padding="22dp"
                android:layout_weight="0.4"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:textColor="#0e718b">
            </TextView>

        </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>
